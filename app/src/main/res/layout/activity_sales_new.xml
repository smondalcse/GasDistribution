<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SalesActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/container"
                android:orientation="vertical"
                android:layout_marginTop="2dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:background="@drawable/tabbuttoncontainerleft"
                        android:id="@+id/btnSales"
                        android:textColor="@color/white"
                        android:stateListAnimator="@null"
                        android:textAllCaps="false"
                        android:layout_marginLeft="20dp"
                        android:backgroundTint="@color/purple_500"
                        android:text="Sales"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:background="@color/white"
                        android:layout_width="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_height="match_parent" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:background="@drawable/tabbuttoncontainerright"
                        android:backgroundTint="@color/purple_500"
                        android:id="@+id/btnCollection"
                        android:textColor="@color/white"
                        android:stateListAnimator="@null"
                        android:textAllCaps="false"
                        android:layout_marginRight="20dp"
                        android:text="Collection"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        app:cardBackgroundColor="@color/gray"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_marginRight="0.2dp"
                        android:clickable="true"
                        android:elevation="3dp"
                        android:foreground="?attr/selectableItemBackground">
                        <TextView
                            android:text="Customer"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="50dp" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        app:cardBackgroundColor="@color/gray"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_marginRight="0.2dp"
                        android:clickable="true"
                        android:elevation="3dp"
                        android:foreground="?attr/selectableItemBackground">
                        <TextView
                            android:text="Item"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="50dp" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        app:cardBackgroundColor="@color/gray"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_marginRight="0.2dp"
                        android:clickable="true"
                        android:elevation="3dp"
                        android:foreground="?attr/selectableItemBackground">
                        <TextView
                            android:text="All Item"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="50dp" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_margin="5dp"
                    android:padding="10dp"
                    android:background="@drawable/rectangle"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Button
                            android:id="@+id/btnCustomer"
                            android:textAllCaps="false"
                            android:text="Add Customer"
                            android:backgroundTint="@color/yellow"
                            android:drawableTint="@color/white"
                            android:drawableLeft="@drawable/ic_add"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <Button
                            android:id="@+id/btnCustomerRemove"
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/white"
                            android:background="@drawable/ic_close"
                            android:layout_width="40dp"
                            android:layout_height="40dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_marginRight="5dp"
                                android:layout_weight="0.7"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:text="CID:"
                                    android:textColor="@color/black"
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:id="@+id/txtCustID"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:maxLines="1"
                                    android:text=""
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_weight="1.3"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:text="CName:"
                                    android:textColor="@color/black"
                                    android:layout_width="60dp"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:id="@+id/txtCustName"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:maxLines="1"
                                    android:text=""
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_marginRight="5dp"
                                android:layout_weight="0.7"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:text="CR/CP(-):"
                                    android:textColor="@color/black"
                                    android:layout_width="68dp"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:id="@+id/txtCustStock"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:maxLines="1"
                                    android:text=""
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_weight="1.3"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:text="Mobile:"
                                    android:textColor="@color/black"
                                    android:layout_width="60dp"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:id="@+id/txtCustMobile"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:maxLines="1"
                                    android:text=""
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_marginRight="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:text="Add:"
                                    android:textColor="@color/black"
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:id="@+id/txtCustAddress"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:maxLines="1"
                                    android:text=""
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_margin="5dp"
                    android:padding="10dp"
                    android:background="@drawable/rectangle"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Button
                            android:id="@+id/btnItem"
                            android:textAllCaps="false"
                            android:text="Sales Item"
                            android:backgroundTint="@color/green"
                            android:drawableTint="@color/white"
                            android:drawableLeft="@drawable/ic_add"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <Button
                            android:id="@+id/btnAllItem"
                            android:textAllCaps="false"
                            android:visibility="gone"
                            android:text="Collection Item"
                            android:backgroundTint="@color/green"
                            android:drawableTint="@color/white"
                            android:drawableLeft="@drawable/ic_add"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:id="@+id/linPriceSec"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:text="SSP: "
                                android:layout_marginLeft="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/txtSlenderSalesPrice"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:text="GSP: "
                                android:layout_marginLeft="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/txtGasSalesPrice"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_marginRight="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="ID:"
                                android:textColor="@color/black"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/txtItemID"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:maxLines="1"
                                android:text=""
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text=""
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/txtItemName"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:maxLines="1"
                                android:text=""
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Qty:"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <EditText
                            android:id="@+id/etQty"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:inputType="number"
                            android:maxLines="1"
                            android:layout_marginLeft="5dp"
                            android:padding="5dp"
                            android:background="@drawable/rectangle"
                            android:text=""
                            android:layout_width="50dp"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:id="@+id/linSalesOnly"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/black"
                                android:text="InvQty: "
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/txtItemQtyLeft"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:text=""
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <RadioGroup
                                android:id="@+id/rgItemtype"
                                android:layout_marginLeft="15dp"
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <RadioButton
                                    android:id="@+id/rbGas"
                                    android:text="Refill"
                                    android:textColor="@color/black"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <RadioButton
                                    android:id="@+id/rbGasCylinder"
                                    android:textColor="@color/black"
                                    android:layout_marginLeft="5dp"
                                    android:text="Package"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </RadioGroup>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/btnAddItem"
                        android:textAllCaps="false"
                        android:text="Add Item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/linTitleSales"
                        android:background="@color/gray_light"
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <TextView
                            android:text="ItemName"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="match_parent" />

                        <TextView
                            android:text="Type"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent" />

                        <TextView
                            android:text="Qty"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent" />

                        <TextView
                            android:text="Price"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent" />

                        <TextView
                            android:text="Action"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linTitleCollection"
                        android:visibility="gone"
                        android:background="@color/gray_light"
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <TextView
                            android:text="ItemName"
                            android:paddingLeft="10dp"
                            android:gravity="center_vertical"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="match_parent" />

                        <TextView
                            android:text="Qty"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent" />

                        <TextView
                            android:text="Action"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent" />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvItems"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:minHeight="300dp"
                        android:layout_below="@id/linTitle"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvItemsCollection"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:minHeight="300dp"
                        android:layout_below="@id/linTitle"
                        />

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_margin="5dp"
                        android:padding="10dp"
                        android:background="@drawable/rectangle"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_marginRight="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:text="Sale Qty:"
                                    android:textColor="@color/black"
                                    android:layout_width="110dp"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:id="@+id/txtItemSalesCount"
                                    android:background="@drawable/rectangle"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:maxLines="1"
                                    android:text="0.0"
                                    android:padding="8dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:text="Collection Qty:"
                                    android:textColor="@color/black"
                                    android:layout_width="110dp"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:id="@+id/txtItemCollectionCount"
                                    android:background="@drawable/rectangle"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:maxLines="1"
                                    android:text="0.0"
                                    android:padding="8dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:text="Item_Bill:"
                                    android:textColor="@color/black"
                                    android:layout_width="110dp"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:id="@+id/txtItemBill"
                                    android:background="@drawable/rectangle"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:maxLines="1"
                                    android:text="0.0"
                                    android:padding="8dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:text="Discount:"
                                    android:textColor="@color/black"
                                    android:layout_width="110dp"
                                    android:layout_height="wrap_content" />
                                <EditText
                                    android:id="@+id/etDiscount"
                                    android:textSize="14sp"
                                    android:textColor="@color/red"
                                    android:textStyle="bold"
                                    android:inputType="number"
                                    android:maxLines="1"
                                    android:padding="8dp"
                                    android:background="@drawable/rectangle_blackk"
                                    android:text="0.0"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:text="Net_Amt:"
                                    android:textColor="@color/black"
                                    android:layout_width="110dp"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:id="@+id/txtNetAmt"
                                    android:background="@drawable/rectangle"
                                    android:padding="8dp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:maxLines="1"
                                    android:text="0.0"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:text="Prv_Due:"
                                    android:textColor="@color/black"
                                    android:layout_width="110dp"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:id="@+id/txtPreDue"
                                    android:background="@drawable/rectangle"
                                    android:padding="8dp"
                                    android:layout_marginRight="3dp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:maxLines="1"
                                    android:text="0.0"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:text="Total_Bill:"
                                    android:textColor="@color/black"
                                    android:layout_width="110dp"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:id="@+id/txtTotalBill"
                                    android:background="@drawable/rectangle"
                                    android:padding="8dp"
                                    android:layout_marginRight="3dp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:maxLines="1"
                                    android:text="0.0"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:text="Pay_Amt:"
                                    android:textColor="@color/black"
                                    android:layout_width="110dp"
                                    android:layout_height="wrap_content" />
                                <EditText
                                    android:id="@+id/etPayAmt"
                                    android:textSize="14sp"
                                    android:textColor="@color/green"
                                    android:textStyle="bold"
                                    android:inputType="number"
                                    android:maxLines="1"
                                    android:layout_marginRight="3dp"
                                    android:padding="8dp"
                                    android:background="@drawable/rectangle_blackk"
                                    android:text="0.0"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:text="Current_Due:"
                                    android:textColor="@color/black"
                                    android:layout_width="110dp"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:id="@+id/txtCurrentDue"
                                    android:background="@drawable/rectangle"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:maxLines="1"
                                    android:text="0.0"
                                    android:padding="8dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginBottom="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <Button
                            android:id="@+id/btnCancel"
                            android:backgroundTint="@color/red"
                            android:layout_marginRight="5dp"
                            android:text="Cancel"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />
                        <Button
                            android:id="@+id/btnSave"
                            android:padding="5dp"
                            android:backgroundTint="@color/green"
                            android:layout_marginLeft="5dp"
                            android:text="Save"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>